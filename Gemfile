source "https://rubygems.org"

# Core Jekyll gem
gem "jekyll", "~> 4.3.2"

# Basic SEO and site management
gem "jekyll-seo-tag"

# Windows-specific dependencies
gem "tzinfo-data"
gem "wdm", "~> 0.1.0" if Gem.win_platform?

# Plugins used by Jekyll
group :jekyll_plugins do
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jemoji"
  gem "jekyll-include-cache"
  gem "jekyll-algolia"
end
